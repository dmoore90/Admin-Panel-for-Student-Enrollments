<!DOCTYPE html>
<html>
<head>

	<title>Create User</title>
</head>
<body>
    <div>
        <a href="/adminHome">Admin Home</a>
    </div>

	<h1>Create new user</h1>
    <div>
        <% if (typeof msg != undefined) { %>
            <p><%= msg %></p>
        <% } %>
    </div>
    <form action="/postUser" method="POST">
        <ul>
            <label for="first_name">First Name: </label>
            <input id="first_name" type="text" name="first_name"></ul>
        </ul>
        <ul>
            <label for="last_name">Last Name: </label>
            <input id="last_name" type="text" name="last_name"></ul>
        </ul>
        <ul>
            <label for="email">Email: </label>
            <input id="email" type="text" name="email"></ul>
        </ul>
    	<ul>
            <label for="username">username: </label>
            <input id="username" type="text" name="username"></ul>
    	<ul>
            <label for="password">password: </label>
            <input id="password" type="text" name="password">    	
    	</ul>
        <ul>
            <label for="pass_confirmation">password confirmation: </label>
            <input id="pass_confirmation" type="text" name="pass_confirmation">
        </ul>
        <ul>
            <input type="submit" value="submit">
        </ul>
	</form>

</body>
</html>